<p id="notice"><%= notice %></p>

<h1>Gossips list</h1>

<table>
  <thead>
    <tr>
      <th>Moussaillon</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gossips.each do |gossip| %>
      <tr>
        <td><%= gossip.moussaillon.email %></td>
        <td><%= gossip.content %></td>
        <td><%= link_to 'Show', gossip %></td>
        <td>
          <% if moussaillon_signed_in? && current_moussaillon == gossip.moussaillon %>
            <%= link_to 'Edit', edit_gossip_path(gossip) %>
          <% end %>
        </td>
        <td>
          <% if moussaillon_signed_in? && current_moussaillon == gossip.moussaillon %>
            <%= link_to 'Destroy', gossip, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if moussaillon_signed_in? %>
  <%= link_to 'New Gossip', new_gossip_path %>
<% else %>
  <%= link_to 'Connect to create gossip', new_moussaillon_session_path %>
<% end %>
